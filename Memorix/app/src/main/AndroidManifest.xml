        </activity>
        <activity
            android:name=".view.login.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.VerifyEmailActivity"
