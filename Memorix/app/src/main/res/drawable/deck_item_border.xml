<?xml version="1.0" encoding="utf-8"?>
<!-- Tạo file này trong res/drawable/deck_item_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border ngoài với gradient đồng nhất -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF6B6B"
                android:centerColor="#4ECDC4"
                android:endColor="#45B7D1"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Content area với margin đồng nhất -->
    <item android:top="5dp" android:left="5dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="9dp" />
        </shape>
    </item>

</layer-list>