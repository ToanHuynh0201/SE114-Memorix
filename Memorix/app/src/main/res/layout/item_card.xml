<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Card Type & Actions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvCardType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10sp"
                android:text="2 Mặt"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/card_type_background"
                android:padding="4dp" />

            <ImageButton
                android:id="@+id/btnEditCard"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="Sửa thẻ"
                app:tint="@color/primary_color" />

            <ImageButton
                android:id="@+id/btnDeleteCard"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Xóa thẻ"
                app:tint="@color/accent_dark_color" />

        </LinearLayout>

        <!-- Card Content -->
        <TextView
            android:id="@+id/tvCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung thẻ..."
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>