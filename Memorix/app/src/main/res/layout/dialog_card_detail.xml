<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chi tiết thẻ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#263238" />

        <TextView
            android:id="@+id/tvCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_type_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="2 Mặt"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B2DFDB"
        android:layout_marginBottom="16dp" />

    <!-- Question Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu hỏi"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#00796B"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_content"
        android:padding="16dp"
        android:text="Hello"
        android:textSize="16sp"
        android:textColor="#263238"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp"
        android:gravity="center_vertical" />

    <!-- Answer Section -->
    <TextView
        android:id="@+id/tvAnswerLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đáp án"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#00796B"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_content"
        android:padding="16dp"
        android:text="Xin chào"
        android:textSize="16sp"
        android:textColor="#263238"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp"
        android:gravity="center_vertical" />

    <!-- Multiple Choice Options (will be hidden for other card types) -->
    <LinearLayout
        android:id="@+id/layoutOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các lựa chọn"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#00796B"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutOptionsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Statistics Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_stats"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#009688" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lần ôn"
                android:textSize="12sp"
                android:textColor="#757575" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B2DFDB"
            android:layout_marginHorizontal="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCorrectCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#8BC34A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đúng"
                android:textSize="12sp"
                android:textColor="#757575" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B2DFDB"
            android:layout_marginHorizontal="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAccuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FF9800" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Độ chính xác"
                android:textSize="12sp"
                android:textColor="#757575" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClose"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:textColor="#757575"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_primary_background"
            android:text="Chỉnh sửa"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

</LinearLayout>